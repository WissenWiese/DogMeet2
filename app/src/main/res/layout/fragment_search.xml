<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.Map.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/typeFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <Button
                android:id="@+id/usersFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/incoming"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="true"
                android:text="Компаньоны"
                android:textColor="@color/text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/placeFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Места"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/usersFilter"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/typeDog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/addBtn"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@color/primary_dark"
                android:src="@drawable/save"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/editTextBreed"
                app:layout_constraintStart_toEndOf="@+id/editTextBreed"
                app:layout_constraintTop_toTopOf="@+id/editTextBreed" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu"
                android:text="Размер собак"
                android:textColor="@color/text"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bigBtn2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Большой"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/middleBtn2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Средний"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/bigBtn2"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/smallBtn2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Маленький"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/middleBtn2"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu"
                android:text="Пол"
                android:textColor="@color/text"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bigBtn2" />

            <Button
                android:id="@+id/buttonBoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Кобель"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <Button
                android:id="@+id/buttonGirl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Сучка"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/buttonBoy"
                app:layout_constraintTop_toTopOf="@+id/buttonBoy" />

            <TextView
                android:id="@+id/textViewBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu"
                android:text="Порода"
                android:textColor="@color/text"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonBoy" />

            <AutoCompleteTextView
                android:id="@+id/editTextBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/text"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewBreed" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breed_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextBreed" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/typePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonPark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Парк"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Кафейня"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/buttonPark"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Ресторан"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/buttonCafe"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn3"
                android:fontFamily="@font/ubuntu"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:tag="false"
                android:text="Бар"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/buttonRestaurant"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</FrameLayout>